<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PortalProveedores.Mobile.ViewModels"
             x:DataType="vm:LoginViewModel"
             x:Class="PortalProveedores.Mobile.Views.LoginPage"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Padding="30" VerticalOptions="Center" Spacing="15">

        <Label 
            Text="Portal de Proveedores"
            FontSize="Header"
            HorizontalOptions="Center" />

        <Frame Padding="10" CornerRadius="10">
            <VerticalStackLayout Spacing="10">
                <Entry
                    Placeholder="Email"
                    Text="{Binding Email}"
                    Keyboard="Email"
                    IsEnabled="{Binding IsNotLoading}" />

                <Entry
                    Placeholder="Contraseña"
                    Text="{Binding Password}"
                    IsPassword="True"
                    IsEnabled="{Binding IsNotLoading}" />
            </VerticalStackLayout>
        </Frame>

        <Button 
            Text="Iniciar Sesión"
            Command="{Binding LoginCommand}"
            IsEnabled="{Binding IsNotLoading}"
            HorizontalOptions="Fill" />

        <ActivityIndicator
            IsRunning="{Binding IsLoading}"
            HorizontalOptions="Center" />

    </VerticalStackLayout>

</ContentPage>