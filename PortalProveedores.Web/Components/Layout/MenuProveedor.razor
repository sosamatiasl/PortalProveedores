@using Microsoft.AspNetCore.Components.Routing

<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: 250px; min-height: 100vh;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none">
        <span class="fs-5 fw-bold text-primary">Portal Proveedor</span>
    </a>
    <hr>

    <ul class="nav nav-pills flex-column mb-auto">

        <li class="nav-item">
            <NavLink class="nav-link" Href="/dashboard-proveedor" Match="NavLinkMatch.Prefix">
                <i class="bi bi-speedometer2 me-2"></i>
                Dashboard
            </NavLink>
        </li>

        <li>
            <button class="nav-link w-100 text-start" @onclick="() => OnMenuClicked.InvokeAsync(VISTA_CONFIGURACION)">
                <i class="bi bi-gear-fill me-2">Configuración</i>
            </button>
        </li>

        <li>
            <button class="nav-link w-100 text-start" @onclick="() => OnMenuClicked.InvokeAsync(VISTA_PROCESO_ORDEN)">
                <i class="bi bi-bar-chart-steps me-2">Línea de Proceso de Órdenes</i>
            </button>
        </li>

    </ul>
    <hr>

    <button class="btn btn-outline-danger w-100 mt-auto">
        <i class="bi bi-box-arrow-right me-2">Cerrar Sesión</i>
    </button>
</div>

@code {
    // Definición de constantes para evitar errores de sintaxis en el HTML
    // Estos valores deben coincidir con los "case" en DashboardProveedor.razor
    public const string VISTA_CONFIGURACION = "Configuracion";
    public const string VISTA_PROCESO_ORDEN = "ProcesoOrden";

    // Evento que notifica al componente padre (DashboardProveedor) qué vista mostrar
    [Parameter]
    public EventCallback<string> OnMenuClicked { get; set; }
}