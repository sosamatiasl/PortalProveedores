@page "/dashboard-cliente"
@layout MainLayout
@attribute [Authorize(Roles = DashboardUserRoles.RolCliente)]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using PortalProveedores.Domain.Enums
@using PortalProveedores.Domain.Constants
@using PortalProveedores.Web.Components.Layout
@using PortalProveedores.Web.Components.Dashboard // Importa los sub-componentes
@using System.Security.Claims

<PageTitle>Dashboard Cliente</PageTitle>

<div class="p-4">
    <h1>Panel de Control de Clientes</h1>
    <p class="text-muted">Bienvenido al área de clientes. Utiliza el menú lateral para gestionar tus tareas.</p>

    <AuthorizeView Roles="@DashboardUserRoles.RolCliente">
        <Authorized Context="auth"> 
            <div class="alert alert-info mt-3">
                Tu rol actual: **@(auth.User.FindFirst("role"/*ClaimTypes.Role*/)?.Value ?? "No especificado")**
            </div>
        </Authorized>
    </AuthorizeView>
    
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Órdenes Activas</h5>
                    <p class="card-text fs-2">15</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Pendientes de Pago</h5>
                    <p class="card-text fs-2">$45,000</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Órdenes Entregadas</h5>
                    <p class="card-text fs-2">120</p>
                </div>
            </div>
        </div>
    </div>
</div>