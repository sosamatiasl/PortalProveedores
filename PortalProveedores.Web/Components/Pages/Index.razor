@page "/"
@using PortalProveedores.Web.Components.Layout
@layout EmptyLayout
@rendermode InteractiveServer
@inject NavigationManager Navigation

<PageTitle>Portal de Proveedores</PageTitle>

<div class="landing-container">
    <div class="landing-content">
        <h1 class="display-3 fw-bold mb-4 text-white shadow-text">Portal de Proveedores</h1>
        <p class="lead mb-5 text-white shadow-text">
            Gestione sus pedidos y transacciones con nuestro cliente principal de forma ágil y segura.
        </p>

        <div class="d-grid gap-3 col-md-6 mx-auto">

            @* Botón de Login (para usuarios ya registrados) *@
            <button class="btn btn-lg btn-login" @onclick="NavigateToLogin">
                Iniciar Sesión
            </button>

            @* Botón de Registro (para nuevos proveedores) *@
            <button class="btn btn-lg btn-register" @onclick="NavigateToRegisterProvider">
                Quiero Ser Proveedor
            </button>

            @* Nota sobre el rol de Cliente (como lo solicitó) *@
            <p class="mt-3 text-white-50 small shadow-text">
                El registro de clientes está deshabilitado.
            </p>
        </div>
    </div>
</div>

@code {
    private void NavigateToLogin()
    {
        // Redirige al componente Login (ejemplo: Login.razor)
        Navigation.NavigateTo("/login");
    }

    private void NavigateToRegisterProvider()
    {
        // Redirige al componente de registro de proveedores (ejemplo: RegisterProvider.razor)
        Navigation.NavigateTo("/register-provider");
    }
}