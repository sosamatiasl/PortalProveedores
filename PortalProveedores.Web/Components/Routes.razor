@using PortalProveedores.Web.Auth
@using PortalProveedores.Web.Components.Layout
@using PortalProveedores.Web.Components.Pages
@using Microsoft.AspNetCore.Components.Authorization

@rendermode InteractiveServer

<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h3>Acceso denegado</h3>
                    <p>Por favor, <a href="/login">inicie sesión</a> para acceder.</p>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>No encontrado</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Lo sentimos, no hay nada en esta dirección.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
